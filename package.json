{
  "name": "heph",
  "displayName": "heph",
  "description": "",
  "version": "0.0.7",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "workspaceContains:.hephconfig"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hephbuild/heph.git"
  },
  "publisher": "hephbuild",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "heph.refreshState",
        "title": "heph: refresh state"
      },
      {
        "command": "heph.editorRunConfigs",
        "title": "heph: run from current file",
        "icon": "$(run)"
      }
    ],
    "languages": [
      {
        "id": "hephbuild",
        "filenames": [
          "BUILD"
        ],
        "filenamePatterns": [
          "BUILD.*"
        ],
        "extensions": [
          ".BUILD"
        ],
        "aliases": [
          "heph",
          "hephbuild"
        ],
        "icon": {
          "light": "./icons/icon-light.png",
          "dark": "./icons/icon-dark.png"
        },
        "configuration": "./syntaxes/language-configuration.json"
      },
      {
        "id": "yaml",
        "filenames": [
          ".hephconfig"
        ],
        "filenamePatterns": [
          ".hephconfig.*"
        ],
        "aliases": [
          "YAML",
          "yaml"
        ]
      }
    ],
    "grammars": [
      {
        "language": "hephbuild",
        "scopeName": "source.hephbuild",
        "path": "./syntaxes/hephbuild.tmLanguage.json"
      }
    ],
    "taskDefinitions": [
      {
        "type": "heph",
        "required": [
          "addr"
        ],
        "properties": {
          "addr": {
            "type": "string",
            "description": "Target address"
          },
          "force": {
            "type": "boolean",
            "description": "Force running the target"
          }
        }
      }
    ],
    "configuration": {
      "title": "heph",
      "properties": {
        "heph.buildfiles.watcher.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable file watcher"
        },
        "heph.buildfiles.copyAddr.codelens": {
          "type": "boolean",
          "default": true,
          "description": "Enable copy target addr codelens in BUILD files"
        },
        "heph.fileRun.codelens": {
          "type": "boolean",
          "default": true,
          "description": "Enable codelens in files targetted by vscode-launch or vscode-task annotations"
        },
        "heph.bin": {
          "type": "string",
          "default": "",
          "description": "heph binary path, will default to the system-installed heph"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "heph.editorRunConfigs",
          "when": "heph.hasRunConfigs"
        }
      ],
      "editor/title": [
        {
          "when": "heph.hasRunConfigs",
          "command": "heph.editorRunConfigs",
          "group": "navigation"
        }
      ]
    },
    "icons": {
      "heph-logo": {
        "description": "heph logo",
        "default": {
          "fontPath": "./icons/fontello/font/fontello.woff",
          "fontCharacter": "\\E802"
        }
      }
    }
  },
  "icon": "icons/icon-dark.png",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}
